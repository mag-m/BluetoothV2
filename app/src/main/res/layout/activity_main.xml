<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mainBluetoothONOFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON / OFF" />

        <Button
            android:id="@+id/mainBluetoothDiscoverableONOFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disc 10s"
            android:onClick="discoverableClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disc 100s"
            android:onClick="btnDiscoverable100SecClicked"
            />

        <Button
            android:id="@+id/mainDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:onClick="btnDiscoverClicked"/>


    </LinearLayout>

    <ListView
        android:id="@+id/mainDeviceListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>